<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:padding="16dp"
        android:layout_weight="1"
        android:background="#FF005393"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:text="Bubbling Progress"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/bubble_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xute.bubblingprogressbar.BubbleProgressBar
            android:layout_margin="16dp"
            android:id="@+id/bubble_progress"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:text="Ripple Progress"
            android:textColor="#FF005393"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/ripple_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <xute.bubblingprogressbar.RippleProgress
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:layout_width="64dp"
            android:layout_height="64dp" />

    </RelativeLayout>





</LinearLayout>